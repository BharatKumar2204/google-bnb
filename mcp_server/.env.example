# Server Configuration
MCP_SERVER_HOST=localhost
MCP_SERVER_PORT=8000
DEBUG=False

# Google Cloud Platform
GCP_PROJECT_ID=your-project-id
GCP_REGION=us-central1
GOOGLE_APPLICATION_CREDENTIALS=~/.config/gcloud/application_default_credentials.json

# Google Search API
GOOGLE_SEARCH_API_KEY=your-google-search-api-key
GOOGLE_SEARCH_ENGINE_ID=your-search-engine-id

# News APIs
GOOGLE_NEWS_API_KEY=your-newsapi-key
TWITTER_BEARER_TOKEN=your-twitter-token
REDDIT_CLIENT_ID=your-reddit-client-id
REDDIT_CLIENT_SECRET=your-reddit-secret
GOOGLE_FACT_CHECK_API_KEY=your-fact-check-key

# Vertex AI Models
VERTEX_MODEL_ID=gemini-2.5-pro
VERTEX_VISION_MODEL=gemini-2.5-pro
VERTEX_FLASH_LITE_MODEL=gemini-2.5-flash-lite

# Database
FIRESTORE_DATABASE=news-app-db

# Caching
CACHE_TTL=300
ENABLE_CACHE=True
